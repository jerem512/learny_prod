{% extends 'base.html.twig' %}

{% block title %}ModelMail{% endblock %}

{% block body %}
<div class="wrapper">
    {% include "main/base/nav.html.twig" %}

    {% include "main/base/sidebar.html.twig" %}
    <div class="content-page">
        <div class="row">
            <div class="col-lg-12 mb-3">
                <div class="d-flex flex-wrap align-items-center justify-content-between">
                    <div class="d-flex align-items-center justify-content-between">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb p-0 mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_me_edit') }}">Modèles de mail</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Vue d'un modèle</li>                                </ol>
                        </nav>
                    </div>
                    <a href="{{ path('app_me_edit') }}" class="btn btn-primary btn-sm d-flex align-items-center justify-content-between ml-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-2">Retour</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Vue sur le modèle : {{ model_mail.name }} <a href="{{path('app_model_mail_edit', {'id':model_mail.id})}}" class="text-dark"><svg width="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 22" fill="currentColor"><path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" /></svg></a></h4>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ model_mail.name }}</td>
                        </tr>
                        <tr>
                            <th>Objet du mail</th>
                            <td>{{ model_mail.modelObject }}</td>
                        </tr>
                        <tr>
                            <th>Corps du mail</th>
                            <td>{{ model_mail.modelBody }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        {{ include('model_mail/_delete_form.html.twig') }}
        
    </div>
</div>    
{% endblock %}
