{% extends 'base.html.twig' %}

{% block title %}ModelMail index{% endblock %}

{% block body %}
    <h1>ModelMail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Model_object</th>
                <th>Model_body</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model_mail in model_mails %}
            <tr>
                <td>{{ model_mail.id }}</td>
                <td>{{ model_mail.name }}</td>
                <td>{{ model_mail.modelObject }}</td>
                <td>{{ model_mail.modelBody }}</td>
                <td>
                    <a href="{{ path('model_mail_show', {'id': model_mail.id}) }}">show</a>
                    <a href="{{ path('model_mail_edit', {'id': model_mail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('model_mail_new') }}">Create new</a>
{% endblock %}
