{% extends 'base.html.twig' %} {% block title %}Mediaffiliate{% endblock %} {% block body %}
    <section class="login-content">
        <div class="container h-100">
            <div class="row align-items-center justify-content-center h-100">
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <div class="auth-logo">
                                <img src="{{ asset('images/logo_mediaffiliate.jpeg') }}" class="img-fluid rounded-normal" alt="logo">
                            </div>
                            <p class="text-center">Jordan Brako - Business Coach - CRM</p>
                            <p class="text-center">Veuillez enregistrer votre compte pour vous connecter</p>
                            <form method="post">
                                {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" placeholder="Votre nom de compte ..." name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input type="password" placeholder="Votre mot de passe ..." name="password" id="inputPassword" class="form-control" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="custom-control custom-checkbox mb-3">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1" name="_remember_me">
                                            <label class="custom-control-label" for="customCheck1">Se souvenir de moi</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        {#<a href="{{ path('app_forgot_password_request') }}" class="text-primary float-right">Mot de passe oubli√© ?</a>#}
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="hidden"></span>
                                    <button type="submit" class="btn btn-primary">Se connecter</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}